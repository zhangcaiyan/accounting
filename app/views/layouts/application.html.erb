<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "" %>我的账本</title>
    <%= yield(:head) %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "/javascripts/My97DatePicker/WdatePicker" %>
    <%= csrf_meta_tag %>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-27817510-1']);
      _gaq.push(['_setDomainName', 'wode520.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
  </head>
  <% if user_signed_in? %>
    <body id="body_singed">
      <%= render 'partial/signed_in_header' %>
      <%= yield %>
    </body>
  <% else %>
    <body id="body_unsinged">
      <%= render 'partial/un_signed_in_header' %>
      <div class="row-fluid">
        <div class="span8 offset4">
          <%= yield %>
        </div>
      </div>
    </body>
  <% end %>
</html>
