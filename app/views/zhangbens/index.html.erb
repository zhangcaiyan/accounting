<% title "账本管理" %>

<table>
  <tr><th>默认</th><th>名称</th><th>描述</th><th>操作</th></tr>
<% @zhangbens.each do |zhangben| %>
  <tr>
    <td><%= radio_button_tag "zhangben", zhangben.id, zhangben.position == "1" %></td>
    <td><%= link_to zhangben.name, zhangben %></td>
    <td><%= truncate zhangben.desc, length: 30 %></td>
    <td>
      <%= link_to "编辑", edit_zhangben_path(zhangben) %>
    </td>
    <td>
      <%= link_to "删除", zhangben, method: :delete, confirm: "确认删除吗" %>
    </td>
  </tr>
<% end %>
</table>
<%= link_to "创建账本", new_zhangben_path %>

<script>
  $(function(){
    $(":radio[name='zhangben']").bind("change", function(){
      var zhangben_id = $(this).val()
      $.get("/zhangbens/"+zhangben_id+"/set_default")
    })
  })
</script>
