<%= title "编辑用户资料" %>

<%= render "partial/left_navigation" %>

<div id="right_body">
  
  <div class="edit_user_form">
    <p>我不想使用这个系统了，我要 <%= link_to "取消我的账户", registration_path(resource_name), :confirm => "确定取消您的账户吗?", :method => :delete %>.</p>
  <%= devise_error_messages! %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <table>
      <tr>
        <td><%= f.label :email %>:</td>
        <td><%= f.text_field :email, :class => "login_input" %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password %></td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation %></td>
        <td><%= f.password_field :password_confirmation %></td>
      </tr>
      <tr>
        <td><%= f.label :current_password %></td>
        <td><%= f.password_field :current_password %></td>
      </tr>
      <tr>
        <td></td>
        <td style="text-align:right">
          <%= f.submit "更新", :class => "submit" %>
        </td>
      </tr> 
    </table>
  <% end %>
  </div>
</div>




<script type="text/javascript">
  jQuery(".set_up").addClass("current")
  jQuery(".edit_user").addClass("current")
</script>
