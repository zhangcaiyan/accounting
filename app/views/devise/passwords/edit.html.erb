<%= title "修改密码" %>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "validate_form" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, input_html: {label: "新密码", class: "validate[required]"} %>
  <%= f.input :password_confirmation, input_html: {class: "validate[required, equals[user_password]]"} %>
  <%= f.button :submit, "确认" %>
<% end %>
