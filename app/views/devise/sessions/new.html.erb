<%= title "登陆" %>

<%= alert %> 
<%= simple_form_for(resource, as: "user", url: session_path(resource_name)) do |f| %>
  <%= f.input :login, placeholder: "请输入用户名或email" %>
  <%= f.input :password %>
  <% if devise_mapping.rememberable? -%>
    <%= t 'activerecord.attributes.user.remember_me' %>:
    <%= f.check_box :remember_me %>
  <% end %>
  <%= f.button :submit, "登陆" %>
<% end %>

